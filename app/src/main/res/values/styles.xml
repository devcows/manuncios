<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@drawable/drawer_activated_background</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="activated_background" parent="@style/Theme.AppCompat.Light">
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
    </style>

    <style name="text_apperance_small" parent="@style/Theme.AppCompat.Light">
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
    </style>

    <style name="text_apperance_small_height" parent="@style/Theme.AppCompat.Light">
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
    </style>

    <color name="general_background">#EFFFEF</color>
</resources>
